{
  "compilerOptions": {
    "target": "es5",
    "lib": [ "es5", "es6", "es2015.promise", "dom" ],
    "baseUrl": ".",
    "paths": { "*": [ "src/*" ] },
    "sourceMap": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": [
    "typing/*.d.ts",
    "src/**/*"
  ]
}